<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="/css/styles.css">
  <title>Movie Box App</title>
</head>

<body>
  <%- include ('partials/navbar.ejs') %>
  <div class="container">
    <br>
    <div class="text-center">
      <h1>Trending Movies</h2>
    </div>
    <br>

    <table class="table table-hover small text-center table-dark ">
      <thead>
        <tr>
          <th width="150">Movie Name</th>
          <th >Movie Cover</th>
          <th width="50">Edit</th>
          <th width="50">Delete</th>
        </tr>
      </thead>
      <tbody>
        <% for(let i=0; i < movies.length; i++) { %>
        <tr>
          <td><a href="/movie/<%= movies[i].movieId %>"><%= movies[i].name %></a></td>
          <td><img src="/images/<%= movies[i].image %>" width="200"></td>

          <!-- Edit Link -->
          <td><a href="/editMovie/<%= movies[i].movieId %>">Edit</a></td>
          <!-- Delete Link -->
          <td><a href="/deleteMovie/<%= movies[i].movieId %>"
              onclick="return confirm('Are you sure you want to delete this movie?')">Delete</a></td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</body>

</html>
